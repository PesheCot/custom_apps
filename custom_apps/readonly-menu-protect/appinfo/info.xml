    <licence>agpl</licence>
    <author>Your Name</author>
    <namespace>ReadonlyMenuProtect</namespace>
    <category>security</category>

    <dependencies>
        <nextcloud min-version="28" max-version="29"/>
    </dependencies>

    <settings>
        <admin>OCA\ReadonlyMenuProtect\Settings\Admin</admin>
    </settings>

    <translations>
        <language code="en"/>
        <language code="ru"/>
    </translations>

    <public>0</public>
</info>
